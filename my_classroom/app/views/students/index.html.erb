<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>
  <div class= 'row'>
    <% @students.each do |student| %>
    <div class= 'col-md-4'>
      <div class= 'panel panel-default'>
        <div class= 'panel-body'>
        <h1><%= student.name %></h1>
         <%= image_tag student.avatar.url(:medium), class: "img-responsive" %>
        <h2><%= student.grade %></h2>
        <h3><%= student.age %></h3>
        <div class= 'btn-group'>
        <%= link_to 'Show', student , class: 'btn btn-primary'%>
        <%= link_to 'Edit', edit_student_path(student), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
        </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>



<%= link_to 'New Student', new_student_path %>
