<p id="notice"><%= notice %></p>
<ul class="nav nav-pills" role="tablist">
  <li><%= link_to "All", inventories_path %></li>
  <% @my_makes.each do |c| %>
 <li><%= link_to "#{c.make}", controller: "inventories", make: "#{c.make}" %></li>
<% end %>
</ul>

<h1>Inventory</h1>
<div class = "row">
  <% @inventories.each do |inventory| %>
      <div class = "col-md-4">
        <div class = "panel panel-default">
          <div class = "panel-body">
          <h2><%= inventory.make %></h2>
          <h3><%= inventory.model %></h3>
          <% if inventory.avatar_file_name != nil %>
            <%= image_tag inventory.avatar.url(:medium), class: "img-responsive" %>
          <% end %>
          <p>$ <%= inventory.price%></p>
          <p><%= inventory.description %></p>
          <div class="btn-group">
        <%= link_to 'Show', inventory, class: "btn btn-default" %>
        <%= link_to 'Edit', edit_inventory_path(inventory), class: "btn btn-default" %>
        <%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>

          </div>
          </div>
        </div>
      </div>
  <% end %>
  </div>
  <%= link_to 'New car', new_inventory_path %>
